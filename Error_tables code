-- Table: user_validation
CREATE TABLE user_validation (
    id SERIAL PRIMARY KEY,
    validation_code VARCHAR(10) UNIQUE NOT NULL,
    validation_message TEXT NOT NULL,
    category VARCHAR(100)
);

